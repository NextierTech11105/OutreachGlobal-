{
  "name": "outreach-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nx run-many -t build --exclude=fdaily-pro --outputStyle stream",
    "build:all": "nx run-many -t build --outputStyle stream",
    "dev": "nx run-many -t dev --outputStyle stream",
    "api": "pnpm --filter api",
    "api:build": "nx run-many --target=build --exclude=front",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test --outputStyle stream",
    "test:jest": "jest -c jest.config.js",
    "test:api": "pnpm --filter api jest",
    "test:front": "pnpm --filter front test",
    "test:coverage": "nx run-many -t test --coverage --outputStyle stream",
    "precheck": "pnpm build && pnpm lint",
    "codegen": "pnpm --filter front codegen",
    "artisan": "pnpm --filter api artisan",
    "artisan:dev": "pnpm --filter api artisan:dev",
    "common:build": "pnpm --filter @nextier/common build",
    "dto:build": "pnpm --filter @nextier/dto build",
    "db:push": "pnpm --filter api db:generate && pnpm --filter api db:migrate"
  },
  "description": "Outreach Global monorepo with NestJS API and Next.js frontend",
  "keywords": [
    "monorepo",
    "nestjs",
    "nextjs",
    "drizzle",
    "neon"
  ],
  "devDependencies": {
    "jest": "^29.7.0",
    "next": "^15.3.3",
    "nx": "^21.1.2",
    "nx-cloud": "^19.1.0",
    "pg": "^8.16.0"
  },
  "pnpm": {
    "neverBuiltDependencies": [],
    "overrides": {
      "csstype": "3.1.3"
    }
  }
}
