{
  "manifest_version": 3,
  "name": "Nextier Phone Center",
  "version": "1.0.0",
  "description": "Click-to-Dial & Click-to-SMS from any webpage. Connects to your Nextier Phone Center.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://monkfish-app-mb7h3.ondigitalocean.app/*",
    "https://api.nextierglobal.ai/*",
    "https://*.signalhouse.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
