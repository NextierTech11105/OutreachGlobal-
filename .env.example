# ============================================================
# NEXTIER PLATFORM - ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file with real secrets

# ============================================================
# NX BUILD SETTINGS
# ============================================================
NX_NO_CLOUD=true
NX_CLOUD_ACCESS_TOKEN=

# ============================================================
# DATABASE (PostgreSQL - DigitalOcean Managed)
# ============================================================
DATABASE_URL=postgresql://user:password@host:25060/defaultdb?sslmode=require
# Individual components (for legacy code paths)
DB_HOST=
DB_PORT=25060
DB_NAME=defaultdb
DB_USER=
DB_PASSWORD=

# ============================================================
# REDIS (DigitalOcean Managed)
# ============================================================
REDIS_URL=rediss://default:password@host:25061

# ============================================================
# SIGNALHOUSE SMS INTEGRATION
# ============================================================
SIGNALHOUSE_API_KEY=
SIGNALHOUSE_AUTH_TOKEN=
SIGNALHOUSE_FROM_NUMBER=
SIGNALHOUSE_TENANT_ID=
SIGNALHOUSE_EMAIL=
SIGNALHOUSE_PASSWORD=

# Webhook authentication - REQUIRED for production
SIGNALHOUSE_WEBHOOK_TOKEN=
SIGNALHOUSE_WEBHOOK_SECRET=

# Public URLs for client-side
NEXT_PUBLIC_SIGNALHOUSE_API_URL=https://api.signalhouse.io
NEXT_PUBLIC_SIGNALHOUSE_WS_URL=wss://api.signalhouse.io

# ============================================================
# TWILIO (Voice & Lookup)
# ============================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_API_KEY=
TWILIO_PHONE_NUMBER=

# ============================================================
# AI WORKERS (SDR Agents)
# ============================================================
# Gianna - Opener / Initial Outreach
GIANNA_PHONE_NUMBER=
GIANNA_SUBGROUP_ID=
GIANNA_CAMPAIGN_ID=

# Cathy - Nudger / Follow-up
CATHY_PHONE_NUMBER=
CATHY_SUBGROUP_ID=
CATHY_CAMPAIGN_ID=

# Sabrina - Closer / Booking
SABRINA_PHONE_NUMBER=
SABRINA_SUBGROUP_ID=
SABRINA_CAMPAIGN_ID=

# Default outbound number if worker phone not set
DEFAULT_OUTBOUND_NUMBER=

# ============================================================
# OPENAI / AI SERVICES
# ============================================================
OPENAI_API_KEY=
PERPLEXITY_API_KEY=

# ============================================================
# APOLLO.IO (B2B Lead Enrichment)
# ============================================================
APOLLO_API_KEY=
APOLLO_IO_API_KEY=
NEXT_PUBLIC_APOLLO_IO_API_KEY=

# ============================================================
# DIGITALOCEAN API (MCP Server Integration)
# ============================================================
# Required for Claude Code MCP to manage deployments and infrastructure
DIGITALOCEAN_ACCESS_TOKEN=

# ============================================================
# DIGITALOCEAN SPACES (Object Storage)
# ============================================================
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=nextier

# Legacy variable names (for backwards compatibility)
SPACES_KEY=
SPACES_SECRET=
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SPACES_ENDPOINT=
SPACES_REGION=
SPACES_BUCKET=

# ============================================================
# REAL ESTATE DATA PROVIDERS
# ============================================================
REALESTATE_API_KEY=
REAL_ESTATE_API_KEY=

# ============================================================
# SKIPTRACE & ENRICHMENT
# ============================================================
SKIPTRACE_API_KEY=
TRUE_PEOPLE_SEARCH_API_KEY=
SPOKEO_API_KEY=

# ============================================================
# APPLICATION URLS
# ============================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Multi-tenant identifier
NEXT_PUBLIC_TENANT_ID=

# ============================================================
# AUTHENTICATION
# ============================================================
JWT_SECRET=

# Default admin account (for initial setup only)
DEFAULT_ADMIN_EMAIL=admin@outreachglobal.io
DEFAULT_ADMIN_NAME=Admin
DEFAULT_ADMIN_PASSWORD=

# ============================================================
# CALENDAR & SCHEDULING
# ============================================================
CALENDAR_URL=https://calendly.com/your-team

# ============================================================
# MAPS & LOCATION
# ============================================================
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=

# ============================================================
# CAMPAIGN SETTINGS
# ============================================================
HOT_LEAD_CAMPAIGN_ID=hot_leads_default
DEFAULT_CONTENT_LINK=

# ============================================================
# SMS RATE LIMITING
# ============================================================
SMS_RATE_LIMIT_ENABLED=true
SMS_RATE_LIMIT_ATT=75
SMS_RATE_LIMIT_TMOBILE=60
SMS_RATE_LIMIT_VERIZON=60
SMS_RATE_LIMIT_DEFAULT=60

# ============================================================
# BATCH PROCESSING
# ============================================================
BATCH_SIZE=250
MAX_CONCURRENT_BATCHES=4
MAX_RECORDS_PER_RUN=2000

# ============================================================
# LOGGING & MONITORING
# ============================================================
LOG_LEVEL=info
NODE_ENV=development

# Monitoring webhook for alerts
MONITORING_WEBHOOK_URL=

# ============================================================
# THEME
# ============================================================
NEXT_PUBLIC_THEME_KEY=nextier-theme

# ============================================================
# API SERVER
# ============================================================
PORT=3001
APP_MODE=web

# Feature flags
# Set FEATURE_OWNER_BYPASS=true to allow platform owners (or SUPER_ADMIN) to bypass missing team context for diagnostics and owner workflows. Use with caution.
FEATURE_OWNER_BYPASS=false
