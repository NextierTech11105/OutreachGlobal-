# Frontend Environment Variables

# ==============================================================================
# WHITE-LABEL BRANDING (All optional - defaults to Nextier branding)
# ==============================================================================
# Core branding
NEXT_PUBLIC_APP_NAME=Nextier
NEXT_PUBLIC_COMPANY_NAME=Nextier
NEXT_PUBLIC_LOGO_URL=                          # Optional custom logo URL

# AI Assistant names (configurable per tenant)
NEXT_PUBLIC_AI_ASSISTANT_NAME=Gianna           # Primary AI assistant name
NEXT_PUBLIC_AI_SEARCH_NAME=LUCI                # Search & enrich agent
NEXT_PUBLIC_AI_FOLLOWUP_NAME=Cathy             # Follow-up agent
NEXT_PUBLIC_AI_DATALAKE_NAME=Datalake          # Data source agent

# Theme and email
NEXT_PUBLIC_THEME_KEY=nextier-theme
EMAIL_SENDER_NAME=Gianna | NexTier

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql

# Redis (Upstash for enrichment queue - 250/batch, 5K/day limit)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Real Estate API (for property search)
REAL_ESTATE_API_KEY=
NEXT_PUBLIC_REAL_ESTATE_API_KEY=

# Apollo.io API (for B2B data enrichment)
APOLLO_IO_API_KEY=
NEXT_PUBLIC_APOLLO_IO_API_KEY=

# Google Maps (for property map)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# B2B Data Server (sphinx-usdata-linkedin droplet)
B2B_DATA_API_URL=http://146.190.135.158
B2B_DATA_API_KEY=

# Authentication
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Sentry (optional - error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
