NEXT_PUBLIC_AI_SEARCH_NAME=LUCI                # Search & enrich agent
NEXT_PUBLIC_AI_FOLLOWUP_NAME=Cathy             # Follow-up agent
NEXT_PUBLIC_AI_DATALAKE_NAME=Datalake          # Data source agent

# Theme and email
NEXT_PUBLIC_THEME_KEY=nextier-theme
EMAIL_SENDER_NAME=Gianna | NexTier

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql

# Redis (Upstash for enrichment queue - 250/batch, 5K/day limit)
