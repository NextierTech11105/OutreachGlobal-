# B2B Data Server (sphinx-usdata-linkedin droplet)
B2B_DATA_API_URL=http://146.190.135.158
B2B_DATA_API_KEY=

# Authentication
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# ==============================================================================
# AI / LLM CONFIGURATION
# ==============================================================================
# OpenAI (Primary LLM for content generation, CATHY, property analysis)
OPENAI_API_KEY=

# Anthropic Claude (Optional - fallback/alternative LLM)
ANTHROPIC_API_KEY=

# Google Gemini (Optional - fallback/alternative LLM)
GOOGLE_GENERATIVE_AI_API_KEY=

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================
# Sentry (optional - error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=

# ==============================================================================
# SIGNALHOUSE SMS PROVIDER
# ==============================================================================
SIGNALHOUSE_API_KEY=
SIGNALHOUSE_WEBHOOK_TOKEN=

# AI Worker Phone Numbers (E.164 format)
GIANNA_PHONE_NUMBER=
CATHY_PHONE_NUMBER=
SABRINA_PHONE_NUMBER=
DEFAULT_OUTBOUND_NUMBER=

# ==============================================================================
# INBOUND PROCESSING CONFIG
# ==============================================================================
# ALL thresholds are config-driven. Operators fill values.
# DO NOT hardcode numeric values in processing logic.
# RULE: If config value is empty (not set), feature is SKIPPED and logs warning.

# Call Queue Routing
# Priority scores for different lead types (0-100)
CALL_QUEUE_PRIORITY_THRESHOLD=
CALL_QUEUE_GOLD_LABEL_PRIORITY=100
CALL_QUEUE_GREEN_TAG_PRIORITY=75

# Priority Weights (for lead score calculation)
# These values are ADDED to lead score when label is detected
WEIGHT_EMAIL_CAPTURED=30
WEIGHT_MOBILE_CAPTURED=20
WEIGHT_CONTACT_VERIFIED=50
WEIGHT_WANTS_CALL=40
WEIGHT_QUESTION_ASKED=10
WEIGHT_HIGH_INTENT=35
WEIGHT_INBOUND_RESPONSE=15

# Retry/Cooldown Settings
MAX_RETRY_ATTEMPTS=3
RETRY_COOLDOWN_HOURS=24

# Batch Limits
DAILY_BATCH_SIZE=2000
SMS_BATCH_SIZE=250

# Feature Flags (set to 'true' to enable)
AUTO_ROUTE_TO_CALL_CENTER=true
AUTO_RESOLVE_THREADS=true
LOG_LEAD_EVENTS=false

# ==============================================================================
# SLA CONFIGURATION (Response Time Targets)
# ==============================================================================
# SLA in minutes for each priority tier (used to set dueAt on inbox items)
SLA_GOLD_MINUTES=15
SLA_GREEN_MINUTES=60
SLA_STANDARD_MINUTES=240
SLA_LOW_MINUTES=1440

# Enable SLA breach notifications
SLA_BREACH_NOTIFY=true

# ==============================================================================
# SMS RATE LIMITING (Carrier TPM Limits)
# ==============================================================================
# Prevents carrier rejections by enforcing messages-per-minute limits
SMS_RATE_LIMIT_ENABLED=true
SMS_RATE_LIMIT_ATT=75
SMS_RATE_LIMIT_TMOBILE=60
SMS_RATE_LIMIT_VERIZON=60
SMS_RATE_LIMIT_DEFAULT=60
