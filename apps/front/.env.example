# Frontend Environment Variables

# ==============================================================================
# WHITE-LABEL CONFIGURATION
# ==============================================================================
# White-label slug (auto-detected from domain if not set)
# Options: "nextier" | "homeowner-advisor"
NEXT_PUBLIC_WHITE_LABEL_SLUG=nextier

# ==============================================================================
# BRANDING (Optional - overrides white-label defaults)
# ==============================================================================
# Core branding
NEXT_PUBLIC_APP_NAME=Nextier
NEXT_PUBLIC_COMPANY_NAME=Nextier
NEXT_PUBLIC_LOGO_URL=                          # Optional custom logo URL

# AI Assistant names (configurable per tenant)
NEXT_PUBLIC_AI_ASSISTANT_NAME=Gianna           # Primary AI assistant name
NEXT_PUBLIC_AI_SEARCH_NAME=LUCI                # Search & enrich agent
NEXT_PUBLIC_AI_FOLLOWUP_NAME=Cathy             # Follow-up agent
NEXT_PUBLIC_AI_DATALAKE_NAME=Datalake          # Data source agent

# Colors (hex values)
NEXT_PUBLIC_PRIMARY_COLOR=#3B82F6
NEXT_PUBLIC_SECONDARY_COLOR=#1E40AF
NEXT_PUBLIC_ACCENT_COLOR=#10B981

# Theme and email
NEXT_PUBLIC_THEME_KEY=nextier-theme
EMAIL_SENDER_NAME=Gianna | NexTier
NEXT_PUBLIC_SUPPORT_EMAIL=support@nextier.io

# ==============================================================================
# DIGITALOCEAN SPACES (Data Lake Storage)
# ==============================================================================
# Bucket name (white-label specific)
# - Nextier: nextier-datalake
# - Homeowner Advisor: homeowner-advisor-datalake
NEXT_PUBLIC_SPACES_BUCKET=nextier-datalake
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_KEY=
SPACES_SECRET=
# Fallback names (for compatibility)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_BUCKET=

# ==============================================================================
# API URLS
# ==============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql

# ==============================================================================
# REDIS (Upstash for enrichment queue)
# ==============================================================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ==============================================================================
# EXTERNAL APIS
# ==============================================================================
# Real Estate API (skip tracing & property search)
REAL_ESTATE_API_KEY=
NEXT_PUBLIC_REAL_ESTATE_API_KEY=

# Apollo.io API (B2B data enrichment)
APOLLO_IO_API_KEY=
NEXT_PUBLIC_APOLLO_IO_API_KEY=

# Google Maps (property map)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# B2B Data Server (sphinx-usdata-linkedin droplet)
B2B_DATA_API_URL=http://146.190.135.158
B2B_DATA_API_KEY=

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# ==============================================================================
# OPTIONAL SERVICES
# ==============================================================================
# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Analytics
NEXT_PUBLIC_GA_ID=

# Feature flags (comma-separated list of disabled features)
# Options: skipTracing,smsMessaging,emailCampaigns,powerDialer,aiSdr,b2bEnrichment,propertyData,achievements
NEXT_PUBLIC_DISABLED_FEATURES=
